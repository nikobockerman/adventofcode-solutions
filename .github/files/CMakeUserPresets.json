{
  "version": 8,
  "configurePresets": [
    {
      "name": "ci-macos-clang-libc++-debug",
      "inherits": [
        "sccache",
        "_ci-macos-clang-libc++",
        "_ci-debug",
        "_ci-clang-tidy"
      ]
    },
    {
      "name": "ci-macos-clang-libc++-release",
      "inherits": [
        "sccache",
        "_ci-macos-clang-libc++",
        "_ci-release",
        "_ci-clang-tidy"
      ]
    },
    {
      "name": "ci-macos-clang-libstdc++-debug",
      "inherits": [
        "sccache",
        "_ci-macos-clang-libstdc++",
        "_ci-debug",
        "_ci-clang-tidy"
      ]
    },
    {
      "name": "ci-macos-clang-libstdc++-release",
      "inherits": [
        "sccache",
        "_ci-macos-clang-libstdc++",
        "_ci-release",
        "_ci-clang-tidy"
      ]
    },
    {
      "name": "ci-macos-gcc-libstdc++-debug",
      "inherits": ["sccache", "_ci-macos-gcc", "_ci-debug"]
    },
    {
      "name": "ci-macos-gcc-libstdc++-release",
      "inherits": ["sccache", "_ci-macos-gcc", "_ci-release"]
    },
    {
      "name": "ci-ubuntu-clang-libstdc++-release",
      "inherits": [
        "sccache",
        "_ci-ubuntu-clang-libstdc++",
        "_ci-release",
        "_ci-clang-tidy"
      ]
    },
    {
      "name": "_ci-macos-clang-libc++",
      "hidden": true,
      "inherits": ["_ci-macos-clang-common", "_ci-clang-libc++"],
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "$env{PRESET_CXX_FLAGS_GCC_CLANG} $env{PRESET_CXX_FLAGS_LIBCPP_FOR_CLANG}"
      }
    },
    {
      "name": "_ci-macos-clang-libstdc++",
      "hidden": true,
      "inherits": [
        "_ci-macos-clang-common",
        "_ci-gcc-libstdc++-for-clang-common",
        "_ci-gcc-libstdc++-for-clang-macos"
      ],
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "$env{PRESET_CXX_FLAGS_GCC_CLANG} $env{PRESET_CXX_FLAGS_LIBSTDCPP_FOR_CLANG_COMMON} $env{PRESET_CXX_FLAGS_LIBSTDCPP_FOR_CLANG_MACOS}"
      }
    },
    {
      "name": "_ci-macos-clang-common",
      "hidden": true,
      "inherits": ["gcc-clang-flags", "_ci-common", "_ci-clang"]
    },
    {
      "name": "_ci-macos-gcc",
      "hidden": true,
      "inherits": ["gcc-clang-flags", "_ci-common", "_ci-gcc"],
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "$env{PRESET_CXX_FLAGS_GCC_CLANG}"
      }
    },
    {
      "name": "_ci-ubuntu-clang-libstdc++",
      "hidden": true,
      "inherits": [
        "gcc-clang-flags",
        "_ci-common",
        "_ci-clang",
        "_ci-gcc-libstdc++-for-clang-common",
        "_ci-gcc-libstdc++-for-clang-ubuntu"
      ],
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "$env{PRESET_CXX_FLAGS_GCC_CLANG} $env{PRESET_CXX_FLAGS_LIBSTDCPP_FOR_CLANG_COMMON} $env{PRESET_CXX_FLAGS_LIBSTDCPP_FOR_CLANG_UBUNTU}"
      }
    },
    {
      "name": "_ci-common",
      "hidden": true,
      "binaryDir": "build",
      "inherits": ["cmake-conan"]
    },
    {
      "name": "_ci-debug",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "_ci-release",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "_ci-clang",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "$penv{HOMEBREW_PREFIX}/opt/llvm/bin/clang",
        "CMAKE_CXX_COMPILER": "$penv{HOMEBREW_PREFIX}/opt/llvm/bin/clang++"
      }
    },
    {
      "name": "_ci-gcc",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "$penv{HOMEBREW_PREFIX}/opt/gcc@15/bin/gcc-15",
        "CMAKE_CXX_COMPILER": "$penv{HOMEBREW_PREFIX}/opt/gcc@15/bin/g++-15"
      }
    },
    {
      "name": "_ci-clang-tidy",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_CLANG_TIDY": "$penv{HOMEBREW_PREFIX}/opt/llvm/bin/clang-tidy"
      }
    },
    {
      "name": "_ci-clang-libc++",
      "hidden": true,
      "environment": {
        "PRESET_CXX_FLAGS_LIBCPP_FOR_CLANG": "-stdlib++-isystem$penv{HOMEBREW_PREFIX}/opt/llvm/include/c++/v1"
      },
      "cacheVariables": {
        "CMAKE_EXE_LINKER_FLAGS": "-stdlib=libc++ -L$penv{HOMEBREW_PREFIX}/opt/llvm/lib/c++ -L$penv{HOMEBREW_PREFIX}/opt/llvm/lib/unwind -lunwind",
        "CMAKE_SHARED_LINKER_FLAGS": "-stdlib=libc++ -L$penv{HOMEBREW_PREFIX}/opt/llvm/lib/c++ -L$penv{HOMEBREW_PREFIX}/opt/llvm/lib/unwind -lunwind",
        "CONAN_HOST_PROFILE": "${sourceDir}/conan-profile-clang-with-libc++;auto-cmake"
      }
    },
    {
      "name": "_ci-gcc-libstdc++-for-clang-common",
      "hidden": true,
      "environment": {
        "PRESET_CXX_FLAGS_LIBSTDCPP_FOR_CLANG_COMMON": "-stdlib++-isystem$penv{HOMEBREW_PREFIX}/opt/gcc/include/c++/15"
      },
      "cacheVariables": {
        "CMAKE_EXE_LINKER_FLAGS": "-stdlib=libstdc++ -L$penv{HOMEBREW_PREFIX}/opt/gcc/lib/gcc/15",
        "CMAKE_SHARED_LINKER_FLAGS": "-stdlib=libstdc++ -L$penv{HOMEBREW_PREFIX}/opt/gcc/lib/gcc/15",
        "CONAN_HOST_PROFILE": "${sourceDir}/conan-profile-gcc-libstd++-for-clang;auto-cmake"
      }
    },
    {
      "name": "_ci-gcc-libstdc++-for-clang-macos",
      "hidden": true,
      "environment": {
        "PRESET_CXX_FLAGS_LIBSTDCPP_FOR_CLANG_MACOS": "-cxx-isystem$penv{HOMEBREW_PREFIX}/opt/gcc/include/c++/15/aarch64-apple-darwin24"
      }
    },
    {
      "name": "_ci-gcc-libstdc++-for-clang-ubuntu",
      "hidden": true,
      "environment": {
        "PRESET_CXX_FLAGS_LIBSTDCPP_FOR_CLANG_UBUNTU": "-cxx-isystem$penv{HOMEBREW_PREFIX}/opt/gcc/include/c++/15/x86_64-pc-linux-gnu"
      }
    }
  ],
