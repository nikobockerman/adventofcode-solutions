{
  "version": 8,
  "configurePresets": [
    {
      "name": "ci-macos-clang-libstdc++-release",
      "inherits": [
        "_ci-common",
        "_ci-macos-clang-libstdc++",
        "_ci-release",
        "_ci-clang-tidy"
      ]
    },
    {
      "name": "ci-ubuntu-clang-libc++-debug",
      "inherits": [
        "_ci-common",
        "_ci-ubuntu-clang-libc++",
        "_ci-debug",
        "_ci-clang-tidy"
      ]
    },
    {
      "name": "ci-ubuntu-clang-libc++-release",
      "inherits": [
        "_ci-common",
        "_ci-ubuntu-clang-libc++",
        "_ci-release",
        "_ci-clang-tidy"
      ]
    },
    {
      "name": "ci-ubuntu-clang-libc++-sanitizers",
      "inherits": ["_ci-common", "_ci-ubuntu-clang-libc++", "_ci-debug"],
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-O1 -fsanitize=address,undefined -fno-sanitize-recover=all -fno-omit-frame-pointer -fno-optimize-sibling-calls -fno-sanitize-merge $env{PRESET_CXX_FLAGS_GCC_CLANG} $env{PRESET_CXX_FLAGS_LIBCPP_FOR_CLANG}",
        "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=address,undefined $env{PRESET_LINKER_FLAGS_LIBCPP_FOR_CLANG}",
        "CMAKE_SHARED_LINKER_FLAGS": "-fsanitize=address,undefined $env{PRESET_LINKER_FLAGS_LIBCPP_FOR_CLANG}"
      }
    },
    {
      "name": "ci-ubuntu-clang-libc++-hardened",
      "inherits": [
        "_ci-common",
        "_ci-ubuntu-clang-common",
        "_ci-custom-hardened-libc++-for-clang",
        "_ci-debug"
      ],
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-D_LIBCPP_DEBUG=1 -D_LIBCPP_HARDENING_MODE=_LIBCPP_HARDENING_MODE_DEBUG $env{PRESET_CXX_FLAGS_GCC_CLANG} $env{PRESET_CXX_FLAGS_CUSTOM_HARDENED_LIBCXX_FOR_CLANG}"
      }
    },
    {
      "name": "ci-ubuntu-clang-libstdc++-debug",
      "inherits": [
        "_ci-common",
        "_ci-ubuntu-clang-libstdc++",
        "_ci-debug",
        "_ci-clang-tidy"
      ]
    },
    {
      "name": "ci-ubuntu-clang-libstdc++-release",
      "inherits": [
        "_ci-common",
        "_ci-ubuntu-clang-libstdc++",
        "_ci-release",
        "_ci-clang-tidy"
      ]
    },
    {
      "name": "ci-ubuntu-gcc-libstdc++-debug",
      "inherits": ["_ci-common", "_ci-ubuntu-gcc", "_ci-debug"]
    },
    {
      "name": "ci-ubuntu-gcc-libstdc++-release",
      "inherits": ["_ci-common", "_ci-ubuntu-gcc", "_ci-release"]
    },
    {
      "name": "_ci-common",
      "hidden": true,
      "binaryDir": "build",
      "inherits": ["cmake-conan", "sccache", "ninja"]
    },
    {
      "name": "_ci-macos-clang-libstdc++",
      "hidden": true,
      "inherits": [
        "gcc-clang-flags",
        "_ci-clang",
        "_ci-gcc-libstdc++-for-clang-common",
        "_ci-gcc-libstdc++-for-clang-macos"
      ],
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "$env{PRESET_CXX_FLAGS_GCC_CLANG} $env{PRESET_CXX_FLAGS_LIBSTDCPP_FOR_CLANG_COMMON} $env{PRESET_CXX_FLAGS_LIBSTDCPP_FOR_CLANG_MACOS}"
      }
    },
    {
      "name": "_ci-ubuntu-clang-libc++",
      "hidden": true,
      "inherits": ["_ci-ubuntu-clang-common", "_ci-clang-libc++"],
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "$env{PRESET_CXX_FLAGS_GCC_CLANG} $env{PRESET_CXX_FLAGS_LIBCPP_FOR_CLANG}"
      }
    },
    {
      "name": "_ci-ubuntu-clang-libstdc++",
      "hidden": true,
      "inherits": [
        "_ci-ubuntu-clang-common",
        "_ci-gcc-libstdc++-for-clang-common",
        "_ci-gcc-libstdc++-for-clang-ubuntu"
      ],
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "$env{PRESET_CXX_FLAGS_GCC_CLANG} $env{PRESET_CXX_FLAGS_LIBSTDCPP_FOR_CLANG_COMMON} $env{PRESET_CXX_FLAGS_LIBSTDCPP_FOR_CLANG_UBUNTU}"
      }
    },
    {
      "name": "_ci-ubuntu-clang-common",
      "hidden": true,
      "inherits": ["gcc-clang-flags", "_ci-clang"]
    },
    {
      "name": "_ci-ubuntu-gcc",
      "hidden": true,
      "inherits": ["gcc-clang-flags", "_ci-gcc"],
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "$env{PRESET_CXX_FLAGS_GCC_CLANG}"
      }
    },
    {
      "name": "_ci-debug",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "_ci-release",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "_ci-clang",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "$penv{HOMEBREW_PREFIX}/opt/llvm@$penv{LLVM_MAJOR_VERSION}/bin/clang",
        "CMAKE_CXX_COMPILER": "$penv{HOMEBREW_PREFIX}/opt/llvm@$penv{LLVM_MAJOR_VERSION}/bin/clang++"
      }
    },
    {
      "name": "_ci-gcc",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "$penv{HOMEBREW_PREFIX}/opt/gcc@$penv{GCC_MAJOR_VERSION}/bin/gcc-$penv{GCC_MAJOR_VERSION}",
        "CMAKE_CXX_COMPILER": "$penv{HOMEBREW_PREFIX}/opt/gcc@$penv{GCC_MAJOR_VERSION}/bin/g++-$penv{GCC_MAJOR_VERSION}"
      }
    },
    {
      "name": "_ci-clang-tidy",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_CLANG_TIDY": "$penv{HOMEBREW_PREFIX}/opt/llvm@$penv{LLVM_MAJOR_VERSION}/bin/clang-tidy"
      }
    },
    {
      "name": "_ci-clang-libc++",
      "hidden": true,
      "environment": {
        "PRESET_CXX_FLAGS_LIBCPP_FOR_CLANG": "-stdlib++-isystem$penv{HOMEBREW_PREFIX}/opt/llvm@$penv{LLVM_MAJOR_VERSION}/include/c++/v1",
        "PRESET_LINKER_FLAGS_LIBCPP_FOR_CLANG": "-stdlib=libc++ -L$penv{HOMEBREW_PREFIX}/opt/llvm@$penv{LLVM_MAJOR_VERSION}/lib -Wl,-rpath,$penv{HOMEBREW_PREFIX}/opt/llvm@$penv{LLVM_MAJOR_VERSION}/lib"
      },
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "$env{PRESET_CXX_FLAGS_LIBCPP_FOR_CLANG}",
        "CMAKE_EXE_LINKER_FLAGS": "$env{PRESET_LINKER_FLAGS_LIBCPP_FOR_CLANG}",
        "CMAKE_SHARED_LINKER_FLAGS": "$env{PRESET_LINKER_FLAGS_LIBCPP_FOR_CLANG}",
        "CONAN_HOST_PROFILE": "${sourceDir}/conan-profile-clang-with-libc++;auto-cmake"
      }
    },
    {
      "name": "_ci-gcc-libstdc++-for-clang-common",
      "hidden": true,
      "environment": {
        "PRESET_CXX_FLAGS_LIBSTDCPP_FOR_CLANG_COMMON": "-stdlib++-isystem$penv{HOMEBREW_PREFIX}/opt/gcc@$penv{GCC_MAJOR_VERSION}/include/c++/$penv{GCC_MAJOR_VERSION}"
      },
      "cacheVariables": {
        "CMAKE_EXE_LINKER_FLAGS": "-stdlib=libstdc++ -L$penv{HOMEBREW_PREFIX}/opt/gcc@$penv{GCC_MAJOR_VERSION}/lib/gcc/$penv{GCC_MAJOR_VERSION}",
        "CMAKE_SHARED_LINKER_FLAGS": "-stdlib=libstdc++ -L$penv{HOMEBREW_PREFIX}/opt/gcc@$penv{GCC_MAJOR_VERSION}/lib/gcc/$penv{GCC_MAJOR_VERSION}",
        "CONAN_HOST_PROFILE": "${sourceDir}/conan-profile-gcc-libstd++-for-clang;auto-cmake"
      }
    },
    {
      "name": "_ci-custom-hardened-libc++-for-clang",
      "hidden": true,
      "environment": {
        "PRESET_CXX_FLAGS_CUSTOM_HARDENED_LIBCXX_FOR_CLANG": "-stdlib++-isystem$penv{HARDENED_LIBCXX_DIR}/include/c++/v1",
        "PRESET_EXE_LINKER_FLAGS_CUSTOM_HARDENED_LIBCXX_FOR_CLANG": "-stdlib=libc++ -L$penv{HARDENED_LIBCXX_DIR}/lib -lunwind -Wl,-rpath,$penv{HARDENED_LIBCXX_DIR}/lib",
        "PRESET_SHARED_LINKER_FLAGS_CUSTOM_HARDENED_LIBCXX_FOR_CLANG": "-stdlib=libc++ -L$penv{HARDENED_LIBCXX_DIR}/lib -lunwind -Wl,-rpath,$penv{HARDENED_LIBCXX_DIR}/lib"
      },
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "$env{PRESET_CXX_FLAGS_CUSTOM_HARDENED_LIBCXX_FOR_CLANG}",
        "CMAKE_EXE_LINKER_FLAGS": "$env{PRESET_EXE_LINKER_FLAGS_CUSTOM_HARDENED_LIBCXX_FOR_CLANG}",
        "CMAKE_SHARED_LINKER_FLAGS": "$env{PRESET_SHARED_LINKER_FLAGS_CUSTOM_HARDENED_LIBCXX_FOR_CLANG}",
        "CONAN_HOST_PROFILE": "auto-cmake;${sourceDir}/conan-profile-clang-with-hardened-libc++"
      }
    },
    {
      "name": "_ci-gcc-libstdc++-for-clang-macos",
      "hidden": true,
      "environment": {
        "PRESET_CXX_FLAGS_LIBSTDCPP_FOR_CLANG_MACOS": "-cxx-isystem$penv{HOMEBREW_PREFIX}/opt/gcc@$penv{GCC_MAJOR_VERSION}/include/c++/$penv{GCC_MAJOR_VERSION}/aarch64-apple-darwin24"
      }
    },
    {
      "name": "_ci-gcc-libstdc++-for-clang-ubuntu",
      "hidden": true,
      "environment": {
        "PRESET_CXX_FLAGS_LIBSTDCPP_FOR_CLANG_UBUNTU": "-cxx-isystem$penv{HOMEBREW_PREFIX}/opt/gcc@$penv{GCC_MAJOR_VERSION}/include/c++/$penv{GCC_MAJOR_VERSION}/x86_64-pc-linux-gnu"
      }
    }
